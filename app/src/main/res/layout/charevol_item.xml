<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chharItemView"
        android:layout_marginBottom="5dp"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/evolChild"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="5dp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="0,1,2,3,4"
                android:layout_alignBottom="@+id/evolChild"
                android:layout_toRightOf="@+id/evolChild">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/evol1"
                        android:layout_alignBottom="@+id/evolChild"
                        android:layout_toRightOf="@+id/evolChild"
                        android:layout_toEndOf="@+id/evolChild" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/evol2"
                        android:layout_alignBottom="@+id/evolChild"
                        android:layout_toRightOf="@+id/evol1"
                        android:layout_toEndOf="@+id/evol1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/evol3"
                        android:layout_alignBottom="@+id/evolChild"
                        android:layout_toRightOf="@+id/evol2"
                        android:layout_toEndOf="@+id/evol2" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/evol4"
                        android:layout_alignBottom="@+id/evolChild"
                        android:layout_toRightOf="@+id/evol3"
                        android:layout_toEndOf="@+id/evol3" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/evol5"
                        android:layout_alignBottom="@+id/evolChild"
                        android:layout_toRightOf="@+id/evol4"
                        android:layout_toEndOf="@+id/evol4" />
                </TableRow>
            </TableLayout>

        </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
